<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_something_wrong"
        android:textAppearance="@style/Typography.Text_L_Medium"
        android:textColor="@color/neutral_gray_700" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:gravity="center"
        android:text="@string/text_refresh"
        android:textAppearance="@style/Typography.Text_L_Medium"
        android:textColor="@color/highlight_blue_700" />
</LinearLayout>